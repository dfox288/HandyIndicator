                "y": 180
            }
        },
        {
            "when": {
                "facing": "up",
                "open": "false"
            },
            "apply": {
                "model": "minecraft:block/barrel"
            }
        },
        {
            "when": {
                "facing": "up",
                "open": "true"
            },
            "apply": {
                "model": "minecraft:block/barrel_open"
            }
        },
        {
            "when": {
                "facing": "west",
