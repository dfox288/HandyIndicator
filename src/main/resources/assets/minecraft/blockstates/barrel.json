{
    "multipart": [
        {
            "when": {
                "facing": "down",
                "open": "false"
            },
            "apply": {
                "model": "minecraft:block/barrel",
                "x": 180
            }
        },
        {
            "when": {
                "facing": "down",
                "open": "true"
            },
            "apply": {
                "model": "minecraft:block/barrel_open",
                "x": 180
            }
        },
        {
            "when": {
                "facing": "east",
                "open": "false"
            },
            "apply": {
                "model": "minecraft:block/barrel",
                "x": 90,
                "y": 90
            }
        },
        {
            "when": {
                "facing": "east",
                "open": "true"
            },
            "apply": {
                "model": "minecraft:block/barrel_open",
                "x": 90,
                "y": 90
            }
        },
        {
            "when": {
                "facing": "north",
                "open": "false"
            },
            "apply": {
                "model": "minecraft:block/barrel",
                "x": 90
            }
        },
        {
            "when": {
                "facing": "north",
                "open": "true"
            },
            "apply": {
                "model": "minecraft:block/barrel_open",
                "x": 90
            }
        },
        {
            "when": {
                "facing": "south",
                "open": "false"
            },
            "apply": {
                "model": "minecraft:block/barrel",
                "x": 90,
                "y": 180
            }
        },
        {
            "when": {
                "facing": "south",
                "open": "true"
            },
            "apply": {
                "model": "minecraft:block/barrel_open",
