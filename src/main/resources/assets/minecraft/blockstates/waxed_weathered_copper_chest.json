{
    "multipart": [
        {
            "apply": {
                "model": "minecraft:block/waxed_weathered_copper_chest"
            }
        },
        {
            "when": { "has_items": "true", "type": "single" },
            "apply": { "model": "container_indicator:block/indicator_overlay_chest" }
        },
        {
            "when": { "has_items": "true", "type": "left", "facing": "north" },
            "apply": { "model": "container_indicator:block/indicator_overlay_chest_double" }
        },
        {
            "when": { "has_items": "true", "type": "left", "facing": "south" },
            "apply": { "model": "container_indicator:block/indicator_overlay_chest_double", "y": 180 }
        },
        {
            "when": { "has_items": "true", "type": "left", "facing": "west" },
            "apply": { "model": "container_indicator:block/indicator_overlay_chest_double", "y": 90 }
        },
        {
            "when": { "has_items": "true", "type": "left", "facing": "east" },
            "apply": { "model": "container_indicator:block/indicator_overlay_chest_double", "y": 270 }
        }
    ]
}
